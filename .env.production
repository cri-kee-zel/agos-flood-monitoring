# Production Environment Configuration
NODE_ENV=production
PORT=3000

# IMPORTANT: Replace these with your actual domain
DOMAIN=your-actual-domain.com
ALLOWED_ORIGINS=https://your-actual-domain.com,https://www.your-actual-domain.com

# Database Configuration (if using database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agos_monitoring
DB_USER=agos_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Security Keys - GENERATE NEW ONES FOR PRODUCTION!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_64_CHAR_SECRET
ENCRYPTION_KEY=GENERATE_NEW_32_CHAR_KEY

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-actual-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS/GSM Configuration
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Arduino/Hardware Configuration
ARDUINO_PORT=/dev/ttyUSB0
ARDUINO_BAUD_RATE=9600
SENSOR_UPDATE_INTERVAL=5000

# Server Configuration
MAX_CONNECTIONS=1000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100